<div class="card shadow-sm">
  <%= image_tag url_for(product.photo) if product.photo.attached? %>
  <div class="card-body">
    <p class="card-text"><%= product.description %></p>
    <div class="d-flex justify-content-between align-items-center">
    <div class="btn-group">
      <%= link_to "Edit", edit_product_path(product), :remote => true  , class: "btn btn-sm btn-outline-secondary" %>
      <%= button_to 'Delete', product_path(product), method: :delete ,  class:"btn btn-sm btn-outline-secondary" %>
    </div>
    <small class="text-muted"><%=(@product.created_at) %></small>
    </div>
  </div>
</div>
