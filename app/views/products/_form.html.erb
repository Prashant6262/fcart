<%= form_for @product do |f| %>
  </br>
  <div class="form-group">
     <%= f.text_area :name, class:'form-control', placeholder:' Product Name...', id: "exampleTextarea", rows: "3" %>
  </div>
  <div class="form-group">
     <%= f.text_area :description, class:'form-control', placeholder:' Product Description...', id: "exampleTextarea", rows: "3" %>
  </div>
    <div class="form-group">
     <%= f.text_area :price, class:'form-control', placeholder:' Price here..', id: "exampleTextarea", rows: "3" %>
  </div>
  <div class="form-group clearfix">
    <%= f.file_field :photo, id:'uploadimage', class: 'form-control', style: 'width: 29%;
    float: right;' %>
  </div>
 </br>
  <div class="form-group clearfix">
    <%= f.submit id:'', class: 'btn btn-primary btn-lg float-end' %>
  </div>
<% end %>