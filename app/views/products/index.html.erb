<h2>All Products</h2>
<%= link_to "New product", new_product_path %>
<% @products.each do |product| %>
  <p>Name: <%= product.name %><br>
    Description: <%= product.description %><br>
    unit price of <%= number_to_currency(product.price) %>
    <%= image_tag url_for(product.photo) if product.photo.attached? %>
    <%= product.photo %></p>
  <p>
    <%= link_to "Edit", edit_product_path(product) %>
    <%= button_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
    <%#= link_to "Add #{product.name} to cart", line_items_path(:product_id => product.id) %>
    <%= link_to "Add to cart", carts_path() %>
    <%= link_to "Buy #{product.name} now", cart_path(:products) %>
  <%#= link_to "Add to Cart", line_items_path(:product_id => product), :method => :post %>
  </p>
<% end %>
